<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.card.dao.ProductDao">
    <resultMap id="productMap" type="com.card.entity.domain.Product">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="price" property="price"/>
        <result column="state" property="state"/>
        <result column="category_id" property="categoryId"/>
        <result column="create_time" property="createTime"/>
    </resultMap>
    <insert id="productInsert">
        insert into product(`name`,price,state,category_id,create_time)values
        <foreach collection="commands" open="(" separator="," close=")" item="item">
            #{item.name},#{item.price},#{item.state},#{item.categoryId},#{item.createTime}
        </foreach>
    </insert>
    <delete id="productDeleteByIds">
        delete from product where id in
        <foreach collection="ids" open="(" separator="," close=")" item="item">
            #{item}
        </foreach>
    </delete>
    <update id="productUpdateById">
        update product
        <set>
            <if test="command.name != null and command.name!=''">
                name = #{command.name}
            </if>
            <if test="command.price != null and command.price!=''">
                and price = #{command.price}
            </if>
            <if test="command.state != null and command.state!=''">
                and state = #{command.state}
            </if>
            <if test="command.categoryId != null and command.categoryId!=''">
                and category_id = #{command.categoryId}
            </if>
            <if test="command.createTime != null and command.createTime!=''">
                and create_time = #{command.createTime}
            </if>
        </set>
    </update>
</mapper>