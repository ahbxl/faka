<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.card.dao.CategoryDao">
    <delete id="categoryDeleteByIds">
        delete from category where id in
        <foreach collection="list" open="(" close=")" separator="," item="item">
            #{item}
        </foreach>
    </delete>
    <update id="categoryUpdateById">
        update category
        <set>
            <if test="command.name !=null and command.name != ''">
                `name` = #{command.name}
            </if>
            <if test="command.state != null ">
                and state = #{command.state}
            </if>
        </set>
        where id = #{command.id}
    </update>
    <insert id="categoryInsert">
        insert into category(`name`,state) values
        <foreach collection="ids" open="(" separator="," close=")" item="item">
            #{item.name},#{item.state}
        </foreach>
    </insert>
</mapper>