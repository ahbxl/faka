<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.card.dao.CategoryDao">
    <delete id="categoryDeleteByIds">
        delete from category where id in
        <foreach collection="ids" open="(" close=")" separator="," item="item">
            #{item}
        </foreach>
    </delete>
    <update id="categoryUpdateById">
        update category
        <set>
            <if test="category.name !=null and category.name != ''">
                `name` = #{category.name}
            </if>
            <if test="category.state != null and category.state != ''">
                and state = #{category.state}
            </if>
        </set>
        where id = #{id}
    </update>
    <insert id="categoryInsert">
        insert into category(`name`,state) values
            (#{category.name},#{category.state})
    </insert>
</mapper>